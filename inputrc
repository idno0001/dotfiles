# Page-up and page-down use history completion.
"\e[5~": history-search-backward
"\e[6~": history-search-forward

# Mappings for Ctrl-left-arrow and Ctrl-right-arrow for word moving.
"\e[1;5C": forward-word
"\e[1;5D": backward-word
"\e[1;5C": forward-word
"\e[1;5D": backward-word
"\e\e[C": forward-word
"\e\e[D": backward-word

# Autocomplete symlinked directories to include trailing slash.
set mark-symlinked-directories on

# Autocomplete ignores case.
set completion-ignore-case on

# List all matches in case multiple possible completions are possible.
set show-all-if-ambiguous on

# Show extra file information when completing, like `ls -F` does
set visible-stats on

# Binds C-e C-w to kill words backwords, treating slashes as boundaries.
"\C-e\C-w": unix-filename-rubout

